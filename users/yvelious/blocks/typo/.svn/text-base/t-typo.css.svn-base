/* =BODY
---------------------------------------------------------
*/

body {
    font-size: 62.5%;
    line-height: 1.8em;
    font-family: sans-serif;
}

div {
    position: relative;
}

img {
    border: 0;
}

/* =CUSTOM FONTS
---------------------------------------------------------
*/

@font-face {
    font-family: "univers";
    src: url(../fonts/univers.eot); /* for IE */
    src: local("univers"), /* for normal browser */ url(../fonts/name.ttf) format('woff'), url(../fonts/univers.ttf) format('truetype'), url(../fonts/name.ttfw) format('svg');
}

/* = LINKS

---------------------------------------------------------

*/

a:link, a:visited {
    text-decoration: underline;
}

a:hover, a:active {
    text-decoration: none;
}

/*dashed*/

a.dashed:link, a.dashed:visited {
    text-decoration: none;
    border-bottom: 1px dashed;
}

a.dashed:hover, a.dashed:active {
    text-decoration: none;
    border-bottom: 1px dashed;
}

