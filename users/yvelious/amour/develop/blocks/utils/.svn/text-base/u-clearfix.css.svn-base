/* =CLEARING
---------------------------------------------------------
*/

.u-clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;

}

* html .clearfix {
    zoom: 1

}

.u-clear {
    clear: both;
    height: 0;
    font-size: 0;
    line-height: 0;
}

/* END CLEARING
---------------------------------------------------------
*/



